<!-- it is form for login user -->
<% layout("layouts/boilerplate") %>

<div class="row mt-3 sign">
  <div class="col-6 offset-3">
    <h3>Login User</h3>
    <form action="/login" method="POST" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="username" class="for-label">Username:</label>
        <input
          name="username"
          id="username"
          placeholder="Enter Username"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Username are Required*</div>
      </div>
      <div class="mb-3">
        <label for="password" class="for-label">Password:</label>
        <input
          name="password"
          id="password"
          placeholder="Enter your password"
          type="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">password are Required*</div>
      </div>
      <button class="btn btn-success mb-3">Login</button>
    </form>
  </div>
</div>
